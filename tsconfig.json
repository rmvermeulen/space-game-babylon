{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/*", "src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "types": ["babylonjs", "babylonjs-gui"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
