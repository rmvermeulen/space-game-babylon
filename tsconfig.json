{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/*", "src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "types": [
      "reflect-metadata",
      "babylonjs",
      "babylonjs-gui",
      "babylonjs-loaders"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
